{
  "docUrl1": "https://www.typescriptlang.org/docs/handbook/tsconfig-json.html",
  "docUrl2": "https://www.typescriptlang.org/docs/handbook/compiler-options.html",
  "compilerOptions": {
    // system is NOT supported by webpack
    // see http://stackoverflow.com/questions/35075130/why-webpack-bundled-as-system-register
    // Perhaps https://www.npmjs.com/package/webpack-system-register
    // is a solution to support https://github.com/systemjs/systemjs
    // BUT it seems to be unneeded
    "module": "commonjs",
    "target": "es6",
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowJs": true,
    // https://www.typescriptlang.org/docs/handbook/tsconfig-json.html#types-typeroots-and-types
    /*
      "types": [
        "alt"
      ],
       */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "preserveConstEnums": true,
    "alwaysStrict": true,
    "importHelpers": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "newLine": "LF",
    "rootDir": ".",
    "outDir": "dist",
    "pretty": true,
    "diagnostics": true,
    "listFiles": true,
    // "declaration": true,
    // "declarationDir": "./declarations",
    // "declarationDir": "target/typings",
    // This will influence only the type _declarations_, you still need the polyfill! (tp)
    // see http://stackoverflow.com/questions/42093758/need-clarification-of-the-target-and-lib-compiler-options
    "lib": [
      "DOM",
      "ES2016",
      "ScriptHost"
      // "DOM.Iterable",
      // "WebWorker"
    ]
  },
  "include": [
    "app/**/*",
    "custom-typings/**/*",
    "internals/templates/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
